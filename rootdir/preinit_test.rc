
on pre-init

sysclktz 0

loglevel 3

# create system directories
    mkdir /data/local/system
    mkdir /data/local/data 0771 system system
    mkdir /data/local/cache 0770 system cache
    mkdir /data/local/dbdata
    chmod 0771 /data/local/dbdata
# try to mount sdcard ext2 partition and theirs
# system, data, dbdata, cache folders
    mknod /dev/block/test_ext2 179 10
    mkdir /data/local/sdroot 0755 system system
    mount ext2 /dev/block/test_ext2 /data/local/sdroot
    mount ext2 /data/local/sdroot/system /data/local/system bind
    mount ext2 /data/local/sdroot/data /data/local/data bind
    mount ext2 /data/local/sdroot/dbdata /data/local/dbdata bind
    mount ext2 /data/local/sdroot/cache /data/local/cache bind

# after our job is completed, than run main init
